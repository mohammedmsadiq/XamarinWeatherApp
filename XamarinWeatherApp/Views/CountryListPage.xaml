<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{DynamicResource background}"
    xmlns:controls="clr-namespace:XamarinWeatherApp.Controls"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Class="XamarinWeatherApp.Views.CountryListPage">
    <ContentPage.Content>
        <Grid
            BackgroundColor="Transparent"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <Grid
                x:Name="Navi"
                VerticalOptions="Start">
                <Button
                    x:Name="BackButton"
                    Text="BACK"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    TextColor="White"
                    Command="{Binding GoBackCommand}"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />
                <Label
                    Text="Weather by other Location"
                    TextColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            </Grid>
            <yummy:PancakeView
                x:Name="cakeDetail"
                Padding="0"
                BackgroundColor="{DynamicResource secondbackground}"
                CornerRadius="30,30,0,0"
                HasShadow="false"
                VerticalOptions="FillAndExpand">
                <ListView
                    VerticalScrollBarVisibility="Never"
                    SeparatorVisibility="None"
                    ItemsSource="{Binding Data}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="*" />
                                        <ColumnDefinition
                                            Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout
                                        Grid.Column="0"
                                        HorizontalOptions="StartAndExpand"
                                        VerticalOptions="StartAndExpand"
                                        Orientation="Horizontal">
                                        <Image
                                            VerticalOptions="End"
                                            HorizontalOptions="Start"
                                            Source="{Binding Icon}"
                                            HeightRequest="50"
                                            WidthRequest="50"
                                            Aspect="AspectFit" />
                                        <StackLayout
                                            HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="CenterAndExpand">
                                            <Label
                                                Text="{Binding Time}"
                                                VerticalOptions="Center"
                                                FontSize="15"
                                                FontFamily="{StaticResource LightFont}"
                                                TextColor="White"
                                                HorizontalOptions="StartAndExpand" />
                                            <Label
                                                Text="{Binding Location}"
                                                VerticalOptions="Center"
                                                FontSize="15"
                                                FontFamily="{StaticResource LightFont}"
                                                TextColor="White"
                                                HorizontalOptions="StartAndExpand" />
                                        </StackLayout>
                                    </StackLayout>
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding Temp}"
                                        VerticalOptions="Center"
                                        FontSize="15"
                                        FontFamily="{StaticResource LightFont}"
                                        TextColor="White"
                                        HorizontalOptions="End" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </yummy:PancakeView>
        </Grid>
    </ContentPage.Content>
</ContentPage>