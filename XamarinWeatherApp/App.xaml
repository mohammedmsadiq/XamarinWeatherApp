<?xml version="1.0" encoding="utf-8"?>
<prism:PrismApplication
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
    xmlns:local="clr-namespace:XamarinWeatherApp.Converters"
    xmlns:styling="clr-namespace:XamarinWeatherApp.Styling"
    x:Class="XamarinWeatherApp.App">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <!--Convereters-->
            <local:BackgroundColorConverter
                x:Key="BackgroundColorConverter" />
            <local:UnixTimeConverter
                x:Key="UnixTimeConverter" />
            <local:IconConverter
                x:Key="IconConverter" />

            <ResourceDictionary.MergedDictionaries>
                <styling:FontFamily/>
                <styling:Icons/>
                <styling:LightTheme/>
                <!--<ResourceDictionary
                    Source="/Styling/FontFamily.xaml" />
                <ResourceDictionary
                    Source="/Styling/Icons.xaml" />
                <ResourceDictionary
                    Source="/Styling/LightTheme.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>