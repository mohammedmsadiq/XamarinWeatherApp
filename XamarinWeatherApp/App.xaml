<?xml version="1.0" encoding="utf-8"?>
<prism:PrismApplication
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
    xmlns:resources="clr-namespace:XamarinWeatherApp.Styling"
    xmlns:converter="clr-namespace:XamarinWeatherApp.Converters"
    x:Class="XamarinWeatherApp.App">
    <prism:PrismApplication.Resources>

        <ResourceDictionary
            Source="/Styling/FontFamily.xaml" />
        <ResourceDictionary
            Source="/Styling/Icons.xaml" />
        <ResourceDictionary
            Source="/Styling/LightTheme.xaml" />

        <ResourceDictionary>
            <!--Convereters-->
            <converter:ColourOffSetAConverter
                x:Key="ColourOffSetAConverter" />
            <converter:ColourOffSetBConverter
                x:Key="ColourOffSetBConverter" />
        </ResourceDictionary>      
    </prism:PrismApplication.Resources>
</prism:PrismApplication>